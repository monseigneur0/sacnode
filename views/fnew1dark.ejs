    };
    var editor = CodeMirror.fromTextArea(document.getElementById("html"), {
        lineNumbers: true,
        mode: "text/html",
        matchBrackets: true,
        autocomplete: true,
        theme: "rubyblue",
        autoCloseTags: true

    });
